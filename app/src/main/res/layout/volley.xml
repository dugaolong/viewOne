<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get" />

    <Button
        android:id="@+id/bt_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post" />

    <Button
        android:id="@+id/bt_json_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get请求json数据" />

    <Button
        android:id="@+id/bt_json_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post请求json数据" />

    <Button
        android:id="@+id/bt_imageRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ImageRequest加载图片" />

    <Button
        android:id="@+id/bt_ImageLoader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ImageLoader加载图片" />

    <Button
        android:id="@+id/bt_networkImageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="networkImageview加载图片" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求结果" />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"/>


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_networkImageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>
</LinearLayout>